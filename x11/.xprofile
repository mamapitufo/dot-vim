TERMINAL=/usr/bin/kitty
test -d ${HOME}/bin && export PATH=${HOME}/bin:${PATH}

# These need to be defined here to be picked up by i3.
export TERMINAL PATH

setxkbmap us_intl -option compose:prsc -option ctrl:nocaps -option lv3:ralt_alt

# dbus is needed for thunar...
if which dbus-launch >/dev/null && test -z "$DBUS_SESSION_BUS_ADDRESS"; then
   eval "$(dbus-launch --sh-syntax --exit-with-session)"
fi

eval $(/usr/bin/gnome-keyring-daemon --start)
export SSH_AUTH_SOCK

if ! pgrep --exact mons >/dev/null; then
   nohup mons -a >/dev/null 2>&1 &
fi

