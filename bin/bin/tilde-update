#!/usr/bin/env bash

SYSTEM=`uname -s`

if [ $SYSTEM = "Linux" ]; then

    sudo xbps-install -Su

elif [ $SYSTEM = "Darwin" ]; then
    echo 'update brew database...'
    brew up 2>&1 >/dev/null
    echo -e '\ncleaning up old package files...'
    brew cleanup
    brew cask cleanup
    echo 'outdated packages:'
    brew outdated
    brew cask outdated
fi

[[ -f ~/.spacemacs.d/update ]] && ~/.spacemacs.d/update
[[ -f ~/.config/nvim/update  ]] && ~/.config/nvim/update


