#!/usr/bin/env bash

echo 'update nvim plugins...'
~/.config/nvim/update

SYSTEM=`uname -s`

if [ $SYSTEM = "Linux" ]; then

    sudo xbps-install -Su

elif [ $SYSTEM = "Darwin" ]; then
    echo 'update brew database...'
    brew up 2>&1 >/dev/null
    echo 'outdated packages:'
    brew outdated
fi

